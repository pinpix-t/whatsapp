# Production Environment Variables
# Copy this to .env and fill in your actual values

# === REQUIRED VARIABLES ===

# WhatsApp Business API Configuration
WHATSAPP_TOKEN=your_permanent_system_user_token_here
PHONE_NUMBER_ID=your_phone_number_id
BUSINESS_ID=your_business_id
WEBHOOK_VERIFY_TOKEN=generate_a_secure_random_string_here
APP_SECRET=your_app_secret_from_meta_dashboard

# Database Passwords (generate strong passwords)
POSTGRES_PASSWORD=generate_strong_password_here
REDIS_PASSWORD=generate_strong_password_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# === OPTIONAL CONFIGURATION ===

# Database
POSTGRES_DB=whatsapp_bot
POSTGRES_USER=botuser

# Application
ENVIRONMENT=production
LOG_LEVEL=info
WEB_CONCURRENCY=4
BOT_NAME=PrinterPix Support Assistant
PORT=8000

# Security (comma-separated IP addresses)
ALLOWED_IPS=
ENABLE_WEBHOOK_VERIFICATION=true

# Monitoring (if using external services)
SENTRY_DSN=
DATADOG_API_KEY=
STATSD_HOST=

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM